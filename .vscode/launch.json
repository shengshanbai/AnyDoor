    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Wait for Remote",
            "type": "debugpy",
            "request": "attach",
            "listen": {
                "host": "0.0.0.0", // VSCode监听的地址
                "port": 5678       // VSCode监听的端口
            },
            "pathMappings": [
                {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/tmp/code/AnyDoor"
                }
            ],
            "justMyCode": false
        },
    ]
}